{
    "mainPage": {
        "selector": ".page_wrap",
        "children": {
            "header": {
                "selector": "header",
                "children": {
                    "logo": ".logo",
                    "language": {
                        "selector": ".translate",
                        "children": {
                            "selectedLanguage": "div"
                        }
                    },
                    "loginButton": "[href='/login']",
                    "userProfile": ".user"
                }
            },
            "welcomeMessage": ".title h2"
        },
        "loginForm": {
            "selector": "#login_form",
            "children": {
                "usernameField": "#username",
                "passwordField": "#password",
                "loginButton": "#login_button"
            }
        }
    }
}